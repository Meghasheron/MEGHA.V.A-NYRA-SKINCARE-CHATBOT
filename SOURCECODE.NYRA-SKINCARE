    <h2>Chat with Nyra</h2>
    <div id="chatBox"></div>
    <input type="text" id="userInput" placeholder="Enter your skincare concern..." />
    <button class="button" onclick="sendMessage()">Send</button>
  </div>

  <script>
    function goToPage(pageId) {
      document.querySelectorAll('.page').forEach(page => page.classList.remove('active'));
      document.getElementById(pageId).classList.add('active');
    }

    function sendMessage() {
      const userInput = document.getElementById('userInput').value;
      if (!userInput) return;
      const chatBox = document.getElementById('chatBox');
      const userMsg = `<div class="message user">${userInput}</div>`;
      chatBox.innerHTML += userMsg;
      document.getElementById('userInput').value = '';

      // Dummy bot response
      setTimeout(() => {
        const botMsg = `<div class="message bot">For your concern: <b>${userInput}</b>, we recommend:
          <ul>
            <li>High: <img src='C:\Users\Admin\Desktop\download.jpg'/> Dot&Key - $50</li>
            <li>Medium: <img src='https://via.placeholder.com/50'/> GlowCare - $30</li>
            <li>Low: <img src='https://via.placeholder.com/50'/> SkinBasics - $15</li>
          </ul>
        </div>`;
        chatBox.innerHTML += botMsg;
        chatBox.scrollTop = chatBox.scrollHeight;
      }, 1000);
    }
  </script>
